<%- include('../../admin/partials/header.ejs') %>

<div class="container-fluid">
    <div class="row">
        <%- include('../../admin/partials/navbar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">LISTADO DE CATEGORIAS</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a class="btn btn-sm btn-outline-success" href="/admin/categories/create">CREAR CATEGORIA</a>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead class="text-center">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Cant. Productos</th>
                            <th scope="col" class="text-end">Funciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <% categories.forEach(category => { %>
                        <tr>
                            <td> <%= category.id%></td>
                            <td> <%= category.name%></td>
                            <td></td>
                            <td class="text-end">
                                <a href="/admin/categories/<%= category.id%>/edit">Editar</a>
                                |
                                <a href="/admin/categories/<%= category.id%>/delete">Eliminar</a>
                            </td>
                        </tr>
                        <% });%>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<%- include('../../admin/partials/footer.ejs') %>
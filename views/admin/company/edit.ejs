<%- include('../../admin/partials/header.ejs') %>

<div class="container-fluid">
    <div class="row">
        <%- include('../../admin/partials/navbar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <form class="row g-3" method="POST" action="/admin/company/1/edit?_method=PUT">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">DATOS DE LA EMPRESA</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="submit" class="btn btn-sm btn-outline-success">GUARDAR</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <label class="form-label">Nombre de la empresa</label>
                    <input type="text" class="form-control <%= (locals.errors && errors.name) ? 'is-invalid' : null %>"
                        value="<%= company.name  %>" name="name">
                    <div class="form-text text-danger">
                        <% if (locals.errors && errors.name) { %>
                        <%= errors.name.msg %>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Telefono</label>
                    <div class="input-group">
                        <span class="input-group-text"><span data-feather="phone"></span></span>
                        <input type="text"
                            class="form-control <%= (locals.errors && errors.phone) ? 'is-invalid' : null %>"
                            value="<%= company.phone  %>" name="phone">
                    </div>
                    <div class="form-text text-danger">
                        <% if (locals.errors && errors.phone) { %>
                        <%= errors.phone.msg %>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">CUIT</label>
                    <input type="text" class="form-control <%= (locals.errors && errors.cuit) ? 'is-invalid' : null %>"
                        value="<%= company.cuit  %>" name="cuit">
                    <div class="form-text text-danger">
                        <% if (locals.errors && errors.cuit) { %>
                        <%= errors.cuit.msg %>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">E-mail</label>
                    <div class="input-group">
                        <span class="input-group-text"><span data-feather="mail"></span></span>
                        <input type="text"
                            class="form-control <%= (locals.errors && errors.email) ? 'is-invalid' : null %>"
                            value="<%= company.email  %>" name="email">
                    </div>
                    <div class="form-text text-danger">
                        <% if (locals.errors && errors.email) { %>
                        <%= errors.email.msg %>
                        <% } %>
                    </div>
                </div>
            </form>
        </main>
    </div>
</div>

<%- include('../../admin/partials/footer.ejs') %>
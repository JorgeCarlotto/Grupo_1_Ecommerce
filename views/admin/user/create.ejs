<%- include('../../admin/partials/header.ejs') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../../admin/partials/navbar.ejs') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      
     <!--  <form action="/users/register" method="POST"
      enctype="multipart/form-data">
      </form> -->
      
      
      <form method="POST" action="/admin/user/create">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">CREAR USUARIO</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button type="submit" class="btn btn-sm btn-outline-success"
                href="/admin/user/create">GUARDAR</button>
            </div>
          </div>
        </div>
        <!-- Nombre -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
         </div>
            <input 
            name="name" 
            class="form-control
            <%= locals.errors && errors.name ? 'is-invalid' : null %> " 
            type="text"
            placeholder="Ingresa tu nombre"
            <% if (locals.oldData) { %>
             value="<%=oldData.name%>"
            <% }%> 
            >
            <% if (locals.errors && errors.name) { %>
              <div class="error">
                <p class="text-danger"> <%= errors.name.msg %> </p>  
              </div>
            <% } %>
            
        </div>
        
       
           
         <!-- /Nombre-->
  
  
           <!-- Apellido-->
      <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
         </div>
            <input 
            name="lastName" 
            class="form-control
            <%= locals.errors && errors.lastName ? 'is-invalid' : null %> " 
            type="text"
            placeholder="Ingresa tu apellido"
            <% if (locals.oldData) { %>
              value="<%=oldData.lastName%>"
             <% }%> 
            >
            <% if (locals.errors && errors.lastName) { %>
              <div class="error">
                <p class="text-danger"> <%= errors.lastName.msg %> </p>  
              </div>
            <% } %>
  
        </div>
         <!-- /Apellido-->
  
  
         <!-- Email -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
         </div>
            <input 
            name="email" 
            class="form-control
            <%= locals.errors && errors.email ? 'is-invalid' : null %> "  
            type="email"
            placeholder="Ingresa tu email"
            <% if (locals.oldData) { %>
              value="<%=oldData.email%>"
             <% }%> 
            >
            <% if (locals.errors && errors.email) { %>
              <div class="error">
                <p class="text-danger"> <%= errors.email.msg %> </p>  
              </div>
            <% } %>
        </div> 
        <!-- /Email-->
  
  
      <!-- Telefono -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
        </div>
      
          <input 
            name="tel"
            class="form-control
            <%= locals.errors && errors.tel ? 'is-invalid' : null %> "
            type="number"
            placeholder="Ingresa tu telefono"
            <% if (locals.oldData) { %>
              value="<%=oldData.tel%>"
             <% }%> 
            >
          <% if (locals.errors && errors.tel) { %>
            <div class="error">
              <p class="text-danger"> <%= errors.tel.msg %> </p>  
            </div>
          <% } %>
        </div> 
        <!-- /Telefono-->
  
        
        <!-- Direccion -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-map-marked-alt"></i></span>
        </div>
        
        <input 
            name="address" 
            class="form-control
            <%= locals.errors && errors.address ? 'is-invalid' : null %> " 
            type="text"
            placeholder="Ingresa tu direccion"
            <% if (locals.oldData) { %>
              value="<%=oldData.address%>"
             <% }%> 
            >
        <% if (locals.errors && errors.address) { %>
          <div class="error">
            <p class="text-danger"> <%= errors.address.msg %> </p>  
          </div>
        <% } %>
      </div>
       <!-- /Direccion-->
  
       <!-- Contraseña -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
            <input 
            class="form-control
            <%= locals.errors && errors.password ? 'is-invalid' : null %> " 
            type="password" 
            name="password"
            placeholder="Ingresa tu contraseña"
            <% if (locals.oldData) { %>
              value="<%=oldData.password%>"
             <% }%> 
           
            >
            <% if (locals.errors && errors.password) { %>
              <div class="error">
                <p class="text-danger"> <%= errors.password.msg %> </p>  
              </div>
            <% } %>
        </div> 
        <!-- /Contraseña-->
                                      
  
        <!-- Imagen -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fas fa-images"></i> </span>
        </div>
      
        <input 
        type="file" 
        name="img">
        <% if (locals.errors && errors.img) { %>
          <div class="error">
            <p class="text-danger"> <%= errors.img.msg %> </p>  
          </div>
        <% } %>
        </div> 
        
        <!-- /imagen -->
        <div class="form-group">
        </div> <!-- form-group// -->      
                   
        <div>
          <div class="mb-3">
            <label for="name" class="form-label">Nombre de categoria</label>
            <input type="text" class="form-control <%= (locals.errors && errors.name) ? 'is-invalid' : null %>" name="name" value="<% locals.oldDate ? oldDate.name : null %>">
            <div id="emailHelp" class="form-text text-danger">
              <% if (locals.errors && errors.name) { %>
                <%= errors.name.msg %>
              <% } %>
            </div>
          </div>


        </div>
      </form>
    </main>
  </div>
</div>

<%- include('../../admin/partials/footer.ejs') %>
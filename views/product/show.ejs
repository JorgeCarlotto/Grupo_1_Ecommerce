    <style>
     

    </style>
  </head>

  <body>
	 <!-- Header -->
     <%- include('../partials/navbar.ejs') %>
     <!-- /Header -->

 <main class="detalle-producto">
	<div class="container">   


        <h1 class="titulo-detalle">Detalle del producto: <%= product.id %></h1>
        
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <!-- <div class="tab-pane active" id="pic-1"><img src="http://placekitten.com/400/252" /></div> -->
					           <img  class="show-img"  src="/img/Brownies/Benidia0.jpg" alt="">
						</div>
					
						
					</div>
					<div class="details col-md-6">
						<!-- <h3 class="product-title">Copa de chocotorta</h3> -->
                        <h2 class="product-title">Producto # <%= product.id %> </h2>

						<div class="rating">
							<div class="stars">
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star"></span>
								<span class="fa fa-star"></span>
							</div>
						
						</div>
						<p class="product-description"><%= product.description %> </p>
                        
						<h4 class="price">Precio: <span><%= product.price %></span></h4>
                        <h4 class="price">Categoria: <span><%= product.category_id %> </span></h4>
					
					
						<div class="action">
							<button class="add-to-cart btn btn-default" type="button">a√±adir al carrito</button>
					   <br><br>
                            <form action="/products/show/<%= product.id %>?_method=DELETE" method="POST">
                                <button class="like btn btn-default" type="submit">ELIMINAR</button>
                            </form>
                        
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</main>
    
      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>
      <!-- /Footer -->

  </body>
</html>



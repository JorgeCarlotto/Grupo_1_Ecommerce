<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap  -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

  <!-- CSS interno -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Favicons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <title>Luana Cake</title>

</head>

<body>
  <!-- Header -->
  <%- include('../partials/navbar.ejs') %>




    <main class="main">
        <% if (products.length == 0) { %>
            
        <div class="not-found">
                <h1 class="not-found_titulo">Producto no encontrado</h1>
                <div class="div_imagen_producto  not-found_imgDiv">
                    <img class="imagen_producto not-found_img"
                    src="/img/products/thrid-party-cookies-SITE.jpg" >
                </div>
        </div>  
         
        <% } else { %>
       <br> <br><br>
     
      <div class="container">
          <h2 class="products-title not_found_titulo">Todos los productos</h2>
          <section class="contenedor-productos">
          <% products.forEach(product=> { %>
            <div class="producto">
              <div class="div_imagen_producto">
                <img class="imagen_producto"
                  src="/img/products/<%= product.img ?  product.img : 'product-default.png' %>" >
              </div>
              
              <h2 class="titulo_producto">
                <%= product.name%>
              </h2>
              <h2 class="titulo_producto">
                <%= product.description%>
              </h2>

              <a class="detalle_producto" href="/product/show/<%= product.id %>">Comprar</a>
            </div>
            <%}); %>
        </section>
      </div>

      <%  } %> 
    </main>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>

      <script src="/docs/5.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
        </script>
</body>

</html>
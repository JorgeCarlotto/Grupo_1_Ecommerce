    <title>Document</title>
</head>
<body>
    


 <!-- Header -->
 <%- include('../partials/navbar.ejs') %>
 <!-- /Header -->

 

 <div class="container">
 
  
  <div class="card bg-light">
  <article class="card-body mx-auto" style="max-width: 400px;">
    
	<h4 class="card-title mt-3 text-center">Bienvenido</h4>
	<p class="text-center">Crea tu cuenta</p>


    <div  class="galleta" > <img src="/img/cookies.png"  alt="">
    </div>
    <p>
      <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i> Registrate con Twitter</a>
      <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> Registrate con facebook</a>
    </p>
    <p class="divider-text">
          <span class="bg-light">O completa tus datos:</span>
      </p>
  
    <form action="/users/register" method="POST"
    enctype="multipart/form-data">

      <!-- Nombre -->
    <div class="form-group input-group">
      <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-user"></i> </span>
       </div>
          <input 
          name="name" 
          class="form-control
          <%= locals.errors && errors.name ? 'is-invalid' : null %> " 
          type="text"
          placeholder="Ingresa tu nombre"
          <% if (locals.oldData) { %>
           value="<%=oldData.name%>"
          <% }%> 
          >
          <% if (locals.errors && errors.name) { %>
            <div class="error">
              <p class="text-danger"> <%= errors.name.msg %> </p>  
            </div>
          <% } %>
          
      </div>
      
     
         
       <!-- /Nombre-->


         <!-- Apellido-->
    <div class="form-group input-group">
      <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-user"></i> </span>
       </div>
          <input 
          name="lastName" 
          class="form-control
          <%= locals.errors && errors.lastName ? 'is-invalid' : null %> " 
          type="text"
          placeholder="Ingresa tu apellido"
          <% if (locals.oldData) { %>
            value="<%=oldData.lastName%>"
           <% }%> 
          >
          <% if (locals.errors && errors.lastName) { %>
            <div class="error">
              <p class="text-danger"> <%= errors.lastName.msg %> </p>  
            </div>
          <% } %>

      </div>
       <!-- /Apellido-->


       <!-- Email -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
       </div>
          <input 
          name="email" 
          class="form-control
          <%= locals.errors && errors.email ? 'is-invalid' : null %> "  
          type="email"
          placeholder="Ingresa tu email"
          <% if (locals.oldData) { %>
            value="<%=oldData.email%>"
           <% }%> 
          >
          <% if (locals.errors && errors.email) { %>
            <div class="error">
              <p class="text-danger"> <%= errors.email.msg %> </p>  
            </div>
          <% } %>
      </div> 
      <!-- /Email-->


    <!-- Telefono -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
      </div>
    
        <input 
          name="tel"
          class="form-control
          <%= locals.errors && errors.tel ? 'is-invalid' : null %> "
          type="number"
          placeholder="Ingresa tu telefono"
          <% if (locals.oldData) { %>
            value="<%=oldData.tel%>"
           <% }%> 
          >
        <% if (locals.errors && errors.tel) { %>
          <div class="error">
            <p class="text-danger"> <%= errors.tel.msg %> </p>  
          </div>
        <% } %>
      </div> 
      <!-- /Telefono-->

      
      <!-- Direccion -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-map-marked-alt"></i></span>
      </div>
      
      <input 
          name="address" 
          class="form-control
          <%= locals.errors && errors.address ? 'is-invalid' : null %> " 
          type="text"
          placeholder="Ingresa tu direccion"
          <% if (locals.oldData) { %>
            value="<%=oldData.address%>"
           <% }%> 
          >
      <% if (locals.errors && errors.address) { %>
        <div class="error">
          <p class="text-danger"> <%= errors.address.msg %> </p>  
        </div>
      <% } %>
    </div>
     <!-- /Direccion-->

     <!-- Contraseña -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
      </div>
          <input 
          class="form-control
          <%= locals.errors && errors.password ? 'is-invalid' : null %> " 
          type="password" 
          name="password"
          placeholder="Ingresa tu contraseña"
          <% if (locals.oldData) { %>
            value="<%=oldData.password%>"
           <% }%> 
         
          >
          <% if (locals.errors && errors.password) { %>
            <div class="error">
              <p class="text-danger"> <%= errors.password.msg %> </p>  
            </div>
          <% } %>
      </div> 
      <!-- /Contraseña-->
                                    

      <!-- Imagen -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fas fa-images"></i> </span>
      </div>
    
      <input 
      type="file" 
      name="img">
      <% if (locals.errors && errors.img) { %>
        <div class="error">
          <p class="text-danger"> <%= errors.img.msg %> </p>  
        </div>
      <% } %>
      </div> 
      
      <!-- /imagen -->
      <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block"> Crear cuenta </button>
      </div> <!-- form-group// -->      
      <p class="text-center">Ya tienes una cuenta? <a href="/users/login">Inicicar sesion</a> </p>                                                                 
  </form>
  </article>
  </div> <!-- card.// -->
  
  </div> 
  <!--container end.//-->
  

<!-- Footer -->
<%- include('../partials/footer.ejs') %>
<!-- /Footer -->
</body>

</html>
